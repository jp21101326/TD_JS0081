<!DOCTYPE html>
<html lang="es">
    <%- include("partials/head.ejs") %>
<body>
    <%- include("partials/header.ejs") %>

    <main>
      <section class="productos-container">
        <div class="productos-header">
          <h1><%= titulo %></h1>
          <a href="/productos/agregar" class="btn btn-primary">Agregar Producto</a>
        </div>

        <% if (productos.length === 0) { %>
          <div class="empty-state">
            <i class="bi-box-arrow-in-down fs-1 text-success"></i>
            <h2>No hay productos registrados</h2>
            <p>Comienza agregando tu primer producto a la tienda</p>
            <a href="/productos/agregar" class="btn btn-primary">Agregar Primer Producto</a>
          </div>
        <% } else { %>
          <div class="productos-stats">
            <p>Total de productos: <strong><%= productos.length %></strong></p>
          </div>

          <div class="productos-grid">
            <% productos.forEach(producto => { %>
              <div class="producto-card">
                <div class="producto-header">
                  <h3><%= producto.nombre %></h3>
                  <span class="producto-id  bg-secondary text-white px-2 py-1 rounded">ID: <%= producto.id %></span>
                </div>
                
                <div class="producto-body">
                  <p class="producto-descripcion"><%= producto.descripcion %></p>
                  <p class="producto-precio">$<%= producto.precio.toFixed(2) %></p>
                  
                  <% if (producto.fecha_creacion) { %>
                    <p class="producto-fecha">
                      ðŸ“… <%= new Date(producto.fecha_creacion).toLocaleDateString('es-ES') %>
                    </p>
                  <% } %>
                </div>
                
                <div class="producto-actions">
                    <div class="mb-3 d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary me-2 btn-editar" data-id="<%= producto.id %>">Actualizar</button>
                        
                        <button 
                            type="button" 
                            class="btn btn-danger btn-eliminar" 
                            data-id="<%= producto.id %>" 
                            data-nombre="<%= producto.nombre %>" 
                        >
                            Eliminar
                        </button>
                    </div>
                </div>

              </div>
            <% }); %>
          </div>
        <% } %>
      </section>


      
    </main>

    <!-- Modal para Editar Producto -->
    <div id="modalEditar" style="display: none;">
      <div class="modal-dialog">
        <div class="modal-content" onclick="event.stopPropagation()">
        <div class="modal-header bg-info text-white">
          <h2>Editar Producto</h2>
          <span class="modal-close">&times;</span>
        </div>
        <form id="formEditar" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <label for="editNombre">Nombre del Producto *</label>
              <input type="text" id="editNombre" name="nombre" required maxlength="100">
            </div>

            <div class="form-group">
              <label for="editDescripcion">DescripciÃ³n *</label>
              <textarea id="editDescripcion" name="descripcion" required rows="5" maxlength="500"></textarea>
            </div>

            <div class="form-group">
              <label for="editPrecio">Precio ($) *</label>
              <input type="number" id="editPrecio" name="precio" required step="0.01" min="0">
            </div>
          </div>

          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Actualizar</button>
            <button type="button" class="btn btn-secondary btn-cancelar">Cancelar</button>
          </div>
        </form>
      </div>
      </div>
    </div>
      
 



    <%- include("partials/footer.ejs") %>

</body>
</html>

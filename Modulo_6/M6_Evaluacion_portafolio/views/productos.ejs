<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Productos</title>
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">ðŸ›’ Tienda</a>
      <div>
        <a class="btn btn-light" href="/">Inicio</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <!-- Lista de productos -->
      <div class="col-md-8">
        <h2 class="fw-bold text-secondary mb-3">Lista de Productos</h2>

        <% if (productos.length > 0) { %>
          <div class="row row-cols-1 row-cols-md-2 g-4">
            <% productos.forEach(p => { %>
              <div class="col">
                <div class="card shadow-sm h-100">
                  <div class="card-body">
                    <h5 class="card-title"><%= p.nombre %></h5>
                    <p class="card-text text-muted"><%= p.descripcion %></p>
                    <p class="fw-bold text-primary">$ <%= p.precio %></p>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="alert alert-warning">No hay productos disponibles.</div>
        <% } %>
      </div>

      <!-- Formulario de nuevo producto -->
      <div class="col-md-4">
        <h2 class="fw-bold text-secondary mb-3">Agregar Producto</h2>
        <form method="POST" action="/productos" class="card p-4 shadow-sm">
          <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input type="text" name="nombre" class="form-control" placeholder="Ej: Laptop" required>
          </div>
          <div class="mb-3">
            <label class="form-label">DescripciÃ³n</label>
            <textarea name="descripcion" class="form-control" rows="3" placeholder="Ej: PortÃ¡til de alto rendimiento" required></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Precio</label>
            <input type="number" step="0.01" name="precio" class="form-control" placeholder="Ej: 1200" required>
          </div>
          <button type="submit" class="btn btn-primary w-100">Guardar</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

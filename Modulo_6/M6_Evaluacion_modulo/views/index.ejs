<%- include('partials/head', { titulo: titulo }) %>
<body class="d-flex flex-column min-vh-100 bg-light">
<%- include('partials/navbar') %>

<main class="container mt-4 flex-grow-1">
    <br/>
        
    <div class="d-flex justify-content-end mb-3">
        <a href="/agregar" class="btn btn-success">Nuevo Contacto</a>
    </div>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr  class="text-center">
                <th>ID</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% contactos.forEach(contacto => { %>
                <tr>
                    <td class="text-center"><%= contacto.id %></td>
                    <td><%= contacto.nombre %></td>
                    <td><%= contacto.email %></td>
                    <td class="text-center"><%= contacto.telefono %></td>
                    <td class="text-center">
                        <!--
                        <a href="/editar/<%= contacto.id %>" class="btn btn-sm btn-info text-white me-2">Editar</a>
                        <a href="/eliminar/<%= contacto.id %>" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar a <%= contacto.nombre %>?');">
                            Eliminar
                        </a>
                        -->
                        <a href="/editar/<%= contacto.id %>" class="btn btn-sm btn-info text-white me-2">Editar</a>
                        <a href="/eliminar/<%= contacto.id %>" 
                        class="btn btn-sm btn-danger" 
                        onclick="return confirmarEliminacion('<%= contacto.nombre %>');">
                        Eliminar
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
        
    <% if (contactos.length === 0) { %>
        <div class="alert alert-info" role="alert">
            Aún no hay contactos para mostrar.
        </div>
    <% } %>
</main>
    
<%- include('partials/footer') %>


<%- include('partials/head', { titulo: titulo }) %>
<body class="d-flex flex-column min-vh-100 bg-light">
<%- include('partials/navbar') %>

<main class="container mt-4 flex-grow-1">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h2 class="mb-0"><%= titulo %>: <%= contacto.nombre %></h2>
        </div>
        <div class="card-body">
            <form action="/editar/<%= contacto.id %>" method="POST"> 
                
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre:</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="<%= contacto.nombre %>" required>
                </div>

                <div class="mb-3">
                    <label for="telefono" class="form-label">Tel√©fono:</label>
                    <input type="tel" class="form-control" id="telefono" name="telefono" value="<%= contacto.telefono %>">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= contacto.email %>">
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">
                        Actualizar Contacto
                    </button>
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</main>

<%- include('partials/footer') %>
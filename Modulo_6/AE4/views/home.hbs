
<section class="hero-section text-center py-5 mb-5" style="background: linear-gradient(135deg, #d5d8db 0%, #495057 100%); color: white; border-radius: 10px;">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold text-white mb-4">Hola, soy {{mayusculas mi_nombre}}</h1>
                <p class="lead text-white mb-4">{{descripcion}}</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/about" class="btn btn-light btn-lg">Conoce más de mí</a>
                    <a href="/projects" class="btn btn-outline-light btn-lg">Ver proyectos</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="fw-bold">Proyectos Destacados</h2>
                <p class="text-muted">Algunos de mis trabajos más recientes</p>
            </div>
        </div>
        
        <div class="row g-4">
            {{#each proyectos}}
                        <div class="col-lg-4 col-md-6">
                            <div class="card project-card h-100">
                                {{#if this.image}}
                                <!-- <div class="img-wrapper"> -->
                                    <img src="{{this.image}}" alt="{{this.nombre}}" class="card-img-top product-image" onerror="this.src='/img/placeholder.jpg'">
                                <!-- </div> -->
                                {{/if}}
                                <div class="card-body d-flex flex-column text-justify">
                                    <h5 class="card-title text-primary">
                                        <strong> {{this.nombre}}</strong> 
                                    </h5>
                                    <p class="card-text text-muted">{{this.descripcion}}</p>
                                    <div class="mb-3">
                                        <small class="badge bg-secondary me-1" style="font-size: 1rem; padding: 0.6rem 1rem;">{{this.tecnologias}}</small>
                                    </div>
                                    <div class="mb-3 d-flex justify-content-end">
                                        <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modal-{{this.id}}">
                                            <i class="bi bi-eye me-1"></i>Ver más
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- Modal -->
                        <div class="modal fade" id="modal-{{this.id}}" tabindex="-1" aria-labelledby="modalLabel-{{this.id}}" aria-hidden="true"> 
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content">
                            
                            <!-- Cabecera elegante -->
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title" id="modalLabel-{{this.id}}">{{this.nombre}}</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            
                            <!-- Cuerpo del modal -->
                            <div class="modal-body text-center">
                                {{#if this.image}}
                                <img src="{{this.image}}" alt="{{this.nombre}}" class="img-fluid w-100 d-block mx-auto mb-3" style="height:450px; object-fit:cover;" onerror="this.src='/img/placeholder.jpg'">
                                {{/if}}
                                <p class="text-start custom-font">{{this.descripcion}}</p>
                                <p class="text-start custom-font"><strong>Tecnologías utilizadas:</strong> {{this.tecnologias}}</p>
                            </div>
                            
                            <!-- Pie del modal -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                            </div>
                        </div>
                        </div>

            {{/each}}
        </div>
        
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="/projects" class="btn btn-outline-primary btn-lg">Ver todos los proyectos</a>
            </div>
        </div>
    </div>
</section>
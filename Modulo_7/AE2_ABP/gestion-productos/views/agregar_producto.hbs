<main class="container mt-5 flex-grow-1">
  <div class="card shadow p-4" style="max-width: 600px; margin: 0 auto;">
    <h2 class="text-center text-primary mb-4">Agregar Nuevo Producto</h2>

    <form action="/productos/agregar" method="POST">
      <div class="mb-3">
        <label for="nombre" class="form-label fw-bold">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ej. Bicicleta Trek" required>
      </div>

      <div class="mb-3">
        <label for="precio" class="form-label fw-bold">Precio</label>
        <input type="number" step="0.01" class="form-control" id="precio" name="precio" placeholder="Ej. 499.99" required>
      </div>

      <div class="mb-3">
        <label for="categoria" class="form-label fw-bold">Categoría</label>
        <input type="text" class="form-control" id="categoria" name="categoria" placeholder="Ej. Montaña" required>
      </div>

      <div class="mb-3">
        <label for="stock" class="form-label fw-bold">Stock</label>
        <input type="number" class="form-control" id="stock" name="stock" placeholder="Ej. 10" required>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-success px-4">Guardar</button>
        <a href="/productos" class="btn btn-secondary ms-2">Cancelar</a>
      </div>
    </form>
  </div>
</main>

<div class="row">
  <div class="col-12">
    <div class="card mb-4">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2 class="mb-0">
              <i class="bi bi-book-fill text-primary"></i> Cat치logo de Libros
            </h2>
            <p class="text-muted mb-0">Explora nuestra colecci칩n disponible</p>
          </div>
          <div id="userInfo"></div>
        </div>
      </div>
    </div>

    <div id="alertContainer"></div>

    <div id="librosContainer" class="row g-4">
      <div class="col-12 text-center py-5">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3 text-muted">Cargando libros...</p>
      </div>
    </div>
  </div>
</div>

<!-- Modal de Compra -->
<div class="modal fade" id="compraModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="bi bi-cart-check"></i> Comprar Libro
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <h6 id="modalLibroNombre" class="mb-3"></h6>
        <form id="compraForm">
          <input type="hidden" id="libroId">
          <div class="mb-3">
            <label for="cantidad" class="form-label">Cantidad</label>
            <input 
              type="number" 
              class="form-control" 
              id="cantidad" 
              min="1" 
              value="1"
              required
            >
            <div class="form-text">Disponible: <span id="stockDisponible"></span> unidades</div>
          </div>
          <div class="mb-3">
            <label class="form-label">Total a pagar</label>
            <h4 class="text-primary" id="totalPagar">$0</h4>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" onclick="realizarCompra()">
          <i class="bi bi-check-circle"></i> Confirmar Compra
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const token = localStorage.getItem('token');
  const username = localStorage.getItem('username');
  let currentLibro = null;

  // Mostrar info del usuario
  if (username) {
    document.getElementById('userInfo').innerHTML = `
      <div class="d-flex align-items-center gap-2">
        <span class="badge bg-success">
          <i class="bi bi-person-check"></i> ${username}
        </span>
        <button class="btn btn-sm btn-outline-danger" onclick="logout()">
          <i class="bi bi-box-arrow-right"></i> Salir
        </button>
      </div>
    `;
  }

  function logout() {
    localStorage.removeItem('token');
    localStorage.removeItem('username');
    window.location.href = '/login-page';
  }

  // Cargar libros
  async function cargarLibros() {
    try {
      const response = await fetch('/api/libros');
      const data = await response.json();

      if (data.success && data.data.length > 0) {
        const librosHTML = data.data.map(libro => `
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                  <h5 class="card-title mb-0">${libro.nombre}</h5>
                  ${libro.cantidad_disponible > 0 
                    ? '<span class="badge bg-success">Disponible</span>' 
                    : '<span class="badge bg-danger">Sin Stock</span>'}
                </div>
                <p class="card-text text-muted">
                  <i class="bi bi-person"></i> ${libro.autor || 'Autor desconocido'}
                </p>
                <hr>
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <div>
                    <small class="text-muted d-block">Precio</small>
                    <h4 class="text-primary mb-0">$${libro.precio ? libro.precio.toLocaleString() : 'N/A'}</h4>
                  </div>
                  <div class="text-end">
                    <small class="text-muted d-block">Stock</small>
                    <h5 class="mb-0">${libro.cantidad_disponible}</h5>
                  </div>
                </div>
                ${token && libro.cantidad_disponible > 0
                  ? `<button class="btn btn-primary w-100" onclick="abrirModalCompra(${libro.id})">
                       <i class="bi bi-cart-plus"></i> Comprar
                     </button>`
                  : !token
                    ? `<a href="/login-page" class="btn btn-outline-primary w-100">
                         <i class="bi bi-box-arrow-in-right"></i> Inicia sesi칩n para comprar
                       </a>`
                    : '<button class="btn btn-secondary w-100" disabled>Sin Stock</button>'
                }
              </div>
            </div>
          </div>
        `).join('');

        document.getElementById('librosContainer').innerHTML = librosHTML;
      } else {
        document.getElementById('librosContainer').innerHTML = `
          <div class="col-12">
            <div class="alert alert-info">
              <i class="bi bi-info-circle"></i> No hay libros disponibles en este momento
            </div>
          </div>
        `;
      }
    } catch (error) {
      document.getElementById('librosContainer').innerHTML = `
        <div class="col-12">
          <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> Error al cargar libros
          </div>
        </div>
      `;
    }
  }

  async function abrirModalCompra(libroId) {
    try {
      const response = await fetch(`/api/libros/${libroId}`);
      const data = await response.json();

      if (data.success) {
        currentLibro = data.data;
        document.getElementById('libroId').value = libroId;
        document.getElementById('modalLibroNombre').textContent = currentLibro.nombre;
        document.getElementById('stockDisponible').textContent = currentLibro.cantidad_disponible;
        document.getElementById('cantidad').max = currentLibro.cantidad_disponible;
        calcularTotal();

        const modal = new bootstrap.Modal(document.getElementById('compraModal'));
        modal.show();
      }
    } catch (error) {
      mostrarAlerta('Error al cargar detalles del libro', 'danger');
    }
  }

  document.getElementById('cantidad').addEventListener('input', calcularTotal);

  function calcularTotal() {
    if (currentLibro) {
      const cantidad = parseInt(document.getElementById('cantidad').value) || 0;
      const total = currentLibro.precio * cantidad;
      document.getElementById('totalPagar').textContent = `$${total.toLocaleString()}`;
    }
  }

  async function realizarCompra() {
    const libroId = document.getElementById('libroId').value;
    const cantidad = parseInt(document.getElementById('cantidad').value);

    if (!token) {
      mostrarAlerta('Debes iniciar sesi칩n para comprar', 'warning');
      return;
    }

    try {
      const response = await fetch(`/api/libros/${libroId}/comprar`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({ cantidad })
      });

      const data = await response.json();

      if (data.success) {
        mostrarAlerta(data.message, 'success');
        bootstrap.Modal.getInstance(document.getElementById('compraModal')).hide();
        cargarLibros(); // Recargar libros
      } else {
        mostrarAlerta(data.message, 'danger');
      }
    } catch (error) {
      mostrarAlerta('Error al realizar la compra', 'danger');
    }
  }

  function mostrarAlerta(mensaje, tipo) {
    const alertContainer = document.getElementById('alertContainer');
    alertContainer.innerHTML = `
      <div class="alert alert-${tipo} alert-dismissible fade show">
        <i class="bi bi-${tipo === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i> ${mensaje}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    `;
    setTimeout(() => alertContainer.innerHTML = '', 5000);
  }

  // Cargar libros al iniciar
  cargarLibros();
</script>
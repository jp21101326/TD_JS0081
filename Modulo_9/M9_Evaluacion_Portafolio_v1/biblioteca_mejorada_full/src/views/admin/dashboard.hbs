
<h1>Admin Dashboard</h1>
<div class="row">
  <div class="col"><div class="card p-3">Total libros: {{totalLibros}}</div></div>
  <div class="col"><div class="card p-3">Total ventas: {{totalVentas}}</div></div>
  <div class="col"><div class="card p-3">Libros sin stock: {{sinStock}}</div></div>
</div>

<h2 class="mt-4">Libros</h2>
<table class="table">
  <thead><tr><th>ID</th><th>Nombre</th><th>Precio</th><th>Stock</th><th>Acciones</th></tr></thead>
  <tbody>
    {{#each libros}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.nombre}}</td>
        <td>{{this.precio}}</td>
        <td>{{this.cantidad_disponible}}</td>
        <td>
          <a class="btn btn-sm btn-secondary" href="/admin/edit/{{this.id}}">Editar</a>
          <form action="/admin/delete/{{this.id}}" method="POST" style="display:inline">
            <button class="btn btn-sm btn-danger">Eliminar</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<a href="/admin/new" class="btn btn-primary">Nuevo libro</a>

<a href="/usuarios/register" class="btn btn-success mb-3">Crear nuevo usuario</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Usuario</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each usuarios}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.username}}</td>
      <td>
        <a href="/admin/usuarios/{{this.id}}/editar" class="btn btn-warning btn-sm">Editar</a>
        <a href="/admin/usuarios/{{this.id}}/eliminar" class="btn btn-danger btn-sm">Eliminar</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<a href="/admin" class="btn btn-secondary">Volver al panel</a>

<h2>Editar libro</h2>

<form method="post" action="/libros/{{libro.id}}/editar">
  <div class="mb-3">
    <label class="form-label">Nombre</label>
    <input name="nombre" class="form-control" value="{{libro.nombre}}" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Cantidad</label>
    <input name="cantidad_disponible" type="number" value="{{libro.cantidad_disponible}}" min="0" class="form-control">
  </div>

  <button class="btn btn-primary">Guardar cambios</button>
  <a href="/admin/libros" class="btn btn-secondary">Cancelar</a>
</form>

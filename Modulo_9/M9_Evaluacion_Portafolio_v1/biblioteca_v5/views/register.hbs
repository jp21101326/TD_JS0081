<h2>Registro de usuario</h2>

{{#if error}}
  <div class="alert alert-danger">{{error}}</div>
{{/if}}
{{#if success}}
  <div class="alert alert-success">{{success}}</div>
{{/if}}

<form method="post" action="/usuarios/register">
  <div class="mb-3">
    <label class="form-label">Usuario (username)</label>
    <input name="username" class="form-control" required value="{{usuario.username}}">
  </div>

  <div class="mb-3">
    <label class="form-label">Contrase√±a</label>
    <input name="password" type="password" class="form-control" required>
  </div>

  <div class="mb-3 form-check">
    <input type="checkbox" name="isAdmin" id="isAdmin" class="form-check-input" {{#if usuario.isAdmin}}checked{{/if}}>
    <label for="isAdmin" class="form-check-label">Usuario administrador (opcional)</label>
  </div>

  <button class="btn btn-primary">Registrar</button>
</form>

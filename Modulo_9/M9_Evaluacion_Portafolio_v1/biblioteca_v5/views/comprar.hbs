<h2>Comprar: {{libro.nombre}}</h2>

<div class="mb-3">
  <strong>Disponibles:</strong> {{libro.cantidad_disponible}}
</div>

{{#if error}}
  <div class="alert alert-danger">{{error}}</div>
{{/if}}
{{#if success}}
  <div class="alert alert-success">{{success}}</div>
{{/if}}

<form method="post" action="/libros/{{libro.id}}/comprar" class="mb-3">
  <div class="mb-3">
    <label class="form-label">Cantidad a comprar</label>
    <input name="cantidad" type="number" min="1" max="{{libro.cantidad_disponible}}" class="form-control" required>
  </div>
  <button class="btn btn-primary">Confirmar compra</button>
  <a class="btn btn-secondary" href="/libros">Volver al cat√°logo</a>
</form>

<h2>Gesti√≥n de Libros</h2>

<a href="/libros/crear" class="btn btn-success mb-3">Agregar nuevo libro</a>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Stock</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    {{#each libros}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.nombre}}</td>
      <td>{{this.cantidad_disponible}}</td>
      <td>
        <a href="/libros/{{this.id}}/editar" class="btn btn-warning btn-sm">Editar</a>
        <a href="/libros/{{this.id}}/eliminar" class="btn btn-danger btn-sm">Eliminar</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<a href="/admin" class="btn btn-secondary">Volver al panel</a>

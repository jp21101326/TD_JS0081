<h2>Cat√°logo de libros</h2>

{{#if error}}
  <div class="alert alert-danger">{{error}}</div>
{{/if}}

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Disponibles</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each libros}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.nombre}}</td>
        <td>{{this.cantidad_disponible}}</td>
        <td>
          {{#if (gt this.cantidad_disponible 0)}}
            <a class="btn btn-sm btn-success" href="/libros/{{this.id}}/comprar">Comprar</a>
          {{else}}
            <span class="badge bg-secondary">Sin stock</span>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

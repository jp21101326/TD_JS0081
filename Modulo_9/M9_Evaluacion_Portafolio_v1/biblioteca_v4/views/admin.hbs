<div class="row">
  <div class="col-lg-10 mx-auto">
    <div class="card mb-4">
      <div class="card-body">
        <div class="text-center mb-4">
          <i class="bi bi-gear-fill display-3 text-primary"></i>
          <h2 class="mt-3">Panel de Administrador</h2>
          <p class="text-muted">Gestión completa del sistema de biblioteca</p>
        </div>

        <div id="alertContainer"></div>

        <!-- Información del Sistema -->
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <i class="bi bi-info-circle"></i> Información del Sistema
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <p><strong>Modo de almacenamiento:</strong></p>
                <span class="badge bg-info" id="storageMode">JSON</span>
              </div>
              <div class="col-md-6">
                <p><strong>Estado del servidor:</strong></p>
                <span class="badge bg-success">
                  <i class="bi bi-check-circle"></i> Activo
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Agregar Nuevo Libro -->
        <div class="card mb-4">
          <div class="card-header bg-success text-white">
            <i class="bi bi-plus-circle"></i> Agregar Nuevo Libro
          </div>
          <div class="card-body">
            <form id="createLibroForm">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="nombre" class="form-label">Nombre del Libro *</label>
                  <input type="text" class="form-control" id="nombre" required>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="autor" class="form-label">Autor</label>
                  <input type="text" class="form-control" id="autor">
                </div>
                <div class="col-md-6 mb-3">
                  <label for="precio" class="form-label">Precio</label>
                  <input type="number" class="form-control" id="precio" min="0" step="100">
                </div>
                <div class="col-md-6 mb-3">
                  <label for="cantidad" class="form-label">Cantidad Disponible *</label>
                  <input type="number" class="form-control" id="cantidad" min="0" required>
                </div>
              </div>
              <button type="submit" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Crear Libro
              </button>
            </form>
          </div>
        </div>

        <!-- Lista de Libros -->
        <div class="card mb-4">
          <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <span><i class="bi bi-book"></i> Gestión de Libros</span>
            <button class="btn btn-sm btn-dark" onclick="cargarLibros()">
              <i class="bi bi-arrow-clockwise"></i> Actualizar
            </button>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Autor</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody id="librosTableBody">
                  <tr>
                    <td colspan="6" class="text-center">
                      <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Estadísticas -->
        <div class="card mb-4">
          <div class="card-header bg-info text-white">
            <i class="bi bi-graph-up"></i> Estadísticas
          </div>
          <div class="card-body">
            <div class="row text-center" id="statsContainer">
              <div class="col-md-4">
                <h3 class="text-primary" id="totalLibros">-</h3>
                <p class="text-muted">Total Libros</p>
              </div>
              <div class="col-md-4">
                <h3 class="text-success" id="librosDisponibles">-</h3>
                <p class="text-muted">Disponibles</p>
              </div>
              <div class="col-md-4">
                <h3 class="text-danger" id="librosSinStock">-</h3>
                <p class="text-muted">Sin Stock</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Importar JSON a PostgreSQL -->
        <div class="card">
          <div class="card-header bg-danger text-white">
            <i class="bi bi-database-fill-add"></i> Importar Datos
          </div>
          <div class="card-body">
            <p class="mb-3">
              Esta función permite importar los datos de libros desde JSON a PostgreSQL.
              <strong>Solo funciona si el modo de almacenamiento es PostgreSQL.</strong>
            </p>
            <div class="alert alert-warning">
              <i class="bi bi-exclamation-triangle"></i> 
              <strong>Advertencia:</strong> Esta acción eliminará todos los datos existentes en PostgreSQL.
            </div>
            <button class="btn btn-danger" onclick="importarDatos()">
              <i class="bi bi-upload"></i> Importar JSON a PostgreSQL
            </button>
          </div>
        </div>

        <br>
        <!-- Documentación API -->
        <div class="card">
          <div class="card-header bg-dark text-white">
            <i class="bi bi-file-code"></i> Documentación de API
          </div>
          <div class="card-body">
            <h6>Endpoints Disponibles:</h6>
            <ul class="list-unstyled">
              <li class="mb-2">
                <span class="badge bg-success">POST</span>
                <code>/api/auth/register</code> - Registrar usuario
              </li>
              <li class="mb-2">
                <span class="badge bg-success">POST</span>
                <code>/api/auth/login</code> - Iniciar sesión
              </li>
              <li class="mb-2">
                <span class="badge bg-primary">GET</span>
                <code>/api/libros</code> - Listar todos los libros
              </li>
              <li class="mb-2">
                <span class="badge bg-primary">GET</span>
                <code>/api/libros/:id</code> - Obtener libro por ID
              </li>
              <li class="mb-2">
                <span class="badge bg-warning">POST</span>
                <code>/api/libros/:id/comprar</code> - Comprar libro (requiere JWT)
              </li>
              <li class="mb-2">
                <span class="badge bg-danger">POST</span>
                <code>/api/libros/admin/import-json</code> - Importar JSON (requiere JWT)
              </li>
            </ul>
          </div>
        </div>


      </div>
    </div>
  </div>
</div>

<!-- Modal de Edición -->
<div class="modal fade" id="editModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="bi bi-pencil"></i> Editar Libro
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="editLibroForm">
          <input type="hidden" id="editId">
          <div class="mb-3">
            <label for="editNombre" class="form-label">Nombre del Libro</label>
            <input type="text" class="form-control" id="editNombre" required>
          </div>
          <div class="mb-3">
            <label for="editAutor" class="form-label">Autor</label>
            <input type="text" class="form-control" id="editAutor">
          </div>
          <div class="mb-3">
            <label for="editPrecio" class="form-label">Precio</label>
            <input type="number" class="form-control" id="editPrecio" min="0" step="100">
          </div>
          <div class="mb-3">
            <label for="editCantidad" class="form-label">Cantidad Disponible</label>
            <input type="number" class="form-control" id="editCantidad" min="0" required>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" onclick="actualizarLibro()">
          <i class="bi bi-check-circle"></i> Guardar Cambios
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const token = localStorage.getItem('token');

  if (!token) {
    mostrarAlerta('Debes iniciar sesión para acceder al panel de administrador', 'warning');
    setTimeout(() => window.location.href = '/login-page', 2000);
  }

  // Crear libro
  document.getElementById('createLibroForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const libroData = {
      nombre: document.getElementById('nombre').value,
      autor: document.getElementById('autor').value || 'Autor desconocido',
      precio: parseFloat(document.getElementById('precio').value) || 0,
      cantidad_disponible: parseInt(document.getElementById('cantidad').value)
    };

    try {
      const response = await fetch('/api/libros', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify(libroData)
      });

      const data = await response.json();

      if (data.success) {
        mostrarAlerta(data.message, 'success');
        document.getElementById('createLibroForm').reset();
        cargarLibros();
      } else {
        mostrarAlerta(data.message, 'danger');
      }
    } catch (error) {
      mostrarAlerta('Error al crear libro', 'danger');
    }
  });

  // Cargar libros en la tabla
  async function cargarLibros() {
    try {
      const response = await fetch('/api/libros');
      const data = await response.json();

      if (data.success) {
        const tbody = document.getElementById('librosTableBody');
        
        if (data.data.length === 0) {
          tbody.innerHTML = `
            <tr>
              <td colspan="6" class="text-center text-muted">No hay libros registrados</td>
            </tr>
          `;
          return;
        }

        tbody.innerHTML = data.data.map(libro => `
          <tr>
            <td>${libro.id}</td>
            <td><strong>${libro.nombre}</strong></td>
            <td>${libro.autor || 'N/A'}</td>
            <td>${libro.precio ? libro.precio.toLocaleString() : '0'}</td>
            <td>
              <span class="badge ${libro.cantidad_disponible > 0 ? 'bg-success' : 'bg-danger'}">
                ${libro.cantidad_disponible}
              </span>
            </td>
            <td>
              <button class="btn btn-sm btn-warning" onclick="abrirModalEditar(${libro.id})">
                <i class="bi bi-pencil"></i>
              </button>
              <button class="btn btn-sm btn-danger" onclick="eliminarLibro(${libro.id})">
                <i class="bi bi-trash"></i>
              </button>
            </td>
          </tr>
        `).join('');

        // Actualizar estadísticas
        const disponibles = data.data.filter(l => l.cantidad_disponible > 0).length;
        const sinStock = data.data.filter(l => l.cantidad_disponible === 0).length;

        document.getElementById('totalLibros').textContent = data.data.length;
        document.getElementById('librosDisponibles').textContent = disponibles;
        document.getElementById('librosSinStock').textContent = sinStock;
      }
    } catch (error) {
      mostrarAlerta('Error al cargar libros', 'danger');
    }
  }

  // Abrir modal de edición
  async function abrirModalEditar(id) {
    try {
      const response = await fetch(`/api/libros/${id}`);
      const data = await response.json();

      if (data.success) {
        const libro = data.data;
        document.getElementById('editId').value = libro.id;
        document.getElementById('editNombre').value = libro.nombre;
        document.getElementById('editAutor').value = libro.autor || '';
        document.getElementById('editPrecio').value = libro.precio || 0;
        document.getElementById('editCantidad').value = libro.cantidad_disponible;

        const modal = new bootstrap.Modal(document.getElementById('editModal'));
        modal.show();
      }
    } catch (error) {
      mostrarAlerta('Error al cargar datos del libro', 'danger');
    }
  }

  // Actualizar libro
  async function actualizarLibro() {
    const id = document.getElementById('editId').value;
    const updateData = {
      nombre: document.getElementById('editNombre').value,
      autor: document.getElementById('editAutor').value,
      precio: parseFloat(document.getElementById('editPrecio').value),
      cantidad_disponible: parseInt(document.getElementById('editCantidad').value)
    };

    try {
      const response = await fetch(`/api/libros/${id}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify(updateData)
      });

      const data = await response.json();

      if (data.success) {
        mostrarAlerta(data.message, 'success');
        bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
        cargarLibros();
      } else {
        mostrarAlerta(data.message, 'danger');
      }
    } catch (error) {
      mostrarAlerta('Error al actualizar libro', 'danger');
    }
  }

  // Eliminar libro
  async function eliminarLibro(id) {
    if (!confirm('¿Estás seguro de que deseas eliminar este libro?')) {
      return;
    }

    try {
      const response = await fetch(`/api/libros/${id}`, {
        method: 'DELETE',
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });

      const data = await response.json();

      if (data.success) {
        mostrarAlerta(data.message, 'success');
        cargarLibros();
      } else {
        mostrarAlerta(data.message, 'danger');
      }
    } catch (error) {
      mostrarAlerta('Error al eliminar libro', 'danger');
    }
  }

  // Importar datos
  async function importarDatos() {
    if (!confirm('¿Estás seguro? Esta acción eliminará todos los datos existentes en PostgreSQL.')) {
      return;
    }

    try {
      const response = await fetch('/api/libros/admin/import-json', {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });

      const data = await response.json();

      if (data.success) {
        mostrarAlerta(data.message, 'success');
        cargarLibros();
      } else {
        mostrarAlerta(data.message, 'danger');
      }
    } catch (error) {
      mostrarAlerta('Error al importar datos', 'danger');
    }
  }

  function mostrarAlerta(mensaje, tipo) {
    const alertContainer = document.getElementById('alertContainer');
    alertContainer.innerHTML = `
      <div class="alert alert-${tipo} alert-dismissible fade show">
        <i class="bi bi-${tipo === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i> ${mensaje}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    `;
    setTimeout(() => alertContainer.innerHTML = '', 5000);
  }

  // Cargar libros al iniciar
  cargarLibros();
</script>
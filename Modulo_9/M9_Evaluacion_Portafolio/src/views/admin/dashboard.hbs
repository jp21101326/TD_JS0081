<div class="container my-4">
  <h2 class="fw-bold mb-4">
    <i class="bi bi-speedometer2 text-primary"></i> Panel de Administración
  </h2>
  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm p-3 border-0">
        <div class="d-flex align-items-center">
          <div class="bg-primary text-white rounded-circle p-3 me-3">
            <i class="bi bi-book fs-3"></i>
          </div>
          <div>
            <h6 class="text-muted m-0">Total Libros</h6>
            <h4 class="fw-bold">{{totalLibros}}</h4>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm p-3 border-0">
        <div class="d-flex align-items-center">
          <div class="bg-success text-white rounded-circle p-3 me-3">
            <i class="bi bi-currency-dollar fs-3"></i>
          </div>
          <div>
            <h6 class="text-muted m-0">Total Ventas</h6>
            <h4 class="fw-bold">${{totalVentas}}</h4>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm p-3 border-0">
        <div class="d-flex align-items-center">
          <div class="bg-danger text-white rounded-circle p-3 me-3">
            <i class="bi bi-exclamation-triangle fs-3"></i>
          </div>
          <div>
            <h6 class="text-muted m-0">Libros sin Stock</h6>
            <h4 class="fw-bold">{{sinStock}}</h4>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4 class="fw-bold m-0"><i class="bi bi-book-half"></i> Gestión de Libros</h4>
      <a href="/admin/new" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Libro
      </a>
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each libros}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.nombre}}</td>
              <td>${{this.precio}}</td>
              <td>{{this.cantidad_disponible}}</td>
              <td class="text-center">

                <a class="btn btn-sm btn-secondary me-2" href="/admin/edit/{{this.id}}">
                  <i class="bi bi-pencil-square"></i> Editar
                </a>

                <form action="/admin/delete/{{this.id}}" method="POST" style="display:inline-block">
                  <button class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar este libro?')">
                    <i class="bi bi-trash3"></i> Eliminar
                  </button>
                </form>

              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
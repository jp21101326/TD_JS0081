<h1 class="mb-4">Editar Libro</h1>

<div class="card shadow-sm p-4">
  <form action="/admin/update/{{libro.id}}" method="POST">

    <div class="mb-3">
      <label class="form-label">Nombre del Libro</label>
      <input 
        type="text" 
        name="nombre" 
        class="form-control" 
        value="{{libro.nombre}}" 
        required
      />
    </div>

    <div class="mb-3">
      <label class="form-label">Precio</label>
      <input 
        type="number" 
        step="0.01" 
        min="0" 
        name="precio" 
        class="form-control" 
        value="{{libro.precio}}" 
        required
      />
    </div>

    <div class="mb-3">
      <label class="form-label">Cantidad Disponible</label>
      <input 
        type="number" 
        min="0" 
        name="cantidad" 
        class="form-control" 
        value="{{libro.cantidad_disponible}}" 
        required
      />
    </div>

    <div class="d-flex gap-2">
      <button class="btn btn-primary">Actualizar</button>
      <a href="/admin" class="btn btn-secondary">Cancelar</a>
    </div>

  </form>
</div>

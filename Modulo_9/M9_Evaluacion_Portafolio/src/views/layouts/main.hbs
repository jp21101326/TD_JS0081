<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Tienda Libros</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    main {
      flex: 1;
    }
    .stock-circle {
      display: inline-block;
      width: 32px;
      height: 32px;
      border-radius: 50%;
      font-size: 14px;
      font-weight: bold;
      line-height: 32px;
      text-align: center;
      color: white;
    }
    .stock-green {
      background-color: #28a745;
    }
    .stock-red {
      background-color: #dc3545;
    }
    #tokenContainer {
      display: none;
    }
  </style>
</head>

<body style="background-color: #f8f9fa;">
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">
        <i class="bi bi-book-fill text-primary"></i> Tienda Digital de Libros
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
          <li class="nav-item"><a class="nav-link" href="/libros">Catálogo</a></li>

          {{#if user}}
            <li class="nav-item">
              <a class="nav-link" href="#"><i class="bi bi-person-circle"></i> Hola, {{user.username}}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/carrito"><i class="bi bi-cart"></i> Carrito</a>
            </li>
            {{#if (eq user.username "admin")}}
              <li class="nav-item">
                <a class="nav-link" href="/admin"><i class="bi bi-gear"></i> Admin</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <form action="/logout" method="POST">
                <button class="nav-link btn btn-link text-danger" style="text-decoration:none;">
                  <i class="bi bi-box-arrow-right"></i> Logout
                </button>
              </form>
            </li>
          {{else}}
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/register">Registro</a></li>
            <li class="nav-item"><a class="nav-link" href="/carrito"><i class="bi bi-cart"></i> Carrito</a></li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>

  <!-- CONTENIDO -->
  <main class="container mt-4" >
    {{#if messages.error}}
      <div class="alert alert-danger">{{messages.error.[0]}}</div>
    {{/if}}

    {{#if messages.success}}
      <div class="alert alert-success">{{messages.success.[0]}}</div>
    {{/if}}

    {{{body}}}
  </main>

  <!-- TOKEN USUARIO LOGUEADO -->
    {{#if session.token}}
    <div class="container my-3" id="tokenContainer">
      <div class="alert alert-secondary border p-3">

        <div class="mb-2">
          <small class="text-muted">Token de sesión:</small>
        </div>
        <!-- Caja del TOKEN con scroll horizontal -->
        <div class="p-2 bg-light border rounded"
            style="white-space: nowrap; overflow-x: auto; font-size: 0.85rem;">
          <code id="tokenBox">{{session.token}}</code>
        </div>
      </div>
    </div>
    {{/if}}


  <!-- FOOTER -->
  <footer class="bg-dark text-white py-3 mt-5">
    <div class="container">
      <div class="row">

        <div class="col-md-6">
          <h6>Tienda Digital de Libros</h6>
          <p><i class="bi bi-telephone"></i> (+56) 9 1234-5678 |
             <i class="bi bi-envelope"></i> contacto@DigitalLibros.cl</p>
        </div>

        <div class="col-md-6 text-md-end">
          <h6>Síguenos</h6>
          <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
          <a href="#" class="text-white me-3"><i class="bi bi-twitter"></i></a>
          <a href="#" class="text-white me-3"><i class="bi bi-linkedin"></i></a>
          <a href="#" class="text-white"><i class="bi bi-instagram"></i></a>
        </div>

      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>